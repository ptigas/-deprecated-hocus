{
	"name": "Antihoax",
	"manifest_version": 2,
	"description": "Antihoax shield",
	"version": "0.1",
	"background": {
		"page": "background.html"
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "antihoax"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["script.js"]
		}
	],
	"permissions": [
		"tabs"
	]
}